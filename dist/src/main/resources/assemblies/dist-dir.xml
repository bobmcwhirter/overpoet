<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>dist</baseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>conf/</outputDirectory>
      <directory>src/main/conf</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>bin/</outputDirectory>
      <directory>src/main/bin</directory>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <scope>compile</scope>
      <includes>
        <include>io.overpoet:overpoet-boot</include>
        <include>io.overpoet:overpoet-engine</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib/common/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <scope>compile</scope>
      <includes>
        <include>io.overpoet:overpoet-spi</include>
        <include>io.netty:netty-all</include>
        <include>com.jayway.jsonpath:json-path</include>
        <include>org.glassfish:javax.json</include>
        <include>org.slf4j:slf4j-log4j12</include>
        <include>com.squareup.okhttp3:okhttp</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>platforms/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <unpack>true</unpack>
      <includes>
        <include>*:zip:bundle:*</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>
